{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@services/*": ["./src/services/*"],
      "@shared/*": ["./src/shared/*"],
      "@dto/*": ["./src/dto/*"],
      "@repositories/*": ["./src/dal/repositories/*"],
      "@schemas/*": ["./src/dal/schemas/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
